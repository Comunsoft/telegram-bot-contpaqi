{
  "name": "telegram-bot-contpaqi",
  "version": "1.0.0",
  "description": "Bot de Telegram que se conecta directamente a CONTPAQi Comercial y OpenAI",
  "type": "module",
  "main": "bot.js",
  "scripts": {
    "start": "node bot.js",
    "dev": "node --watch bot.js",
    "panel": "node panel-server.js",
    "panel:dev": "node --watch panel-server.js",
    "setup-db": "node setup-database.js",
    "bot:dynamic": "node bot-dynamic.js",
    "docker:build-bot": "docker build -t telegram-bot:latest -f Dockerfile .",
    "docker:build-panel": "docker build -t telegram-panel:latest -f Dockerfile.panel .",
    "docker:panel-up": "docker-compose -f docker-compose.panel.yml up -d",
    "docker:panel-down": "docker-compose -f docker-compose.panel.yml down",
    "docker:panel-logs": "docker-compose -f docker-compose.panel.yml logs -f panel",
    "mcp-server": "node mcp-server.js",
    "reset": "node reset-bot.js",
    "restart": "node restart-bot.js",
    "stop": "node -e \"const fs=require('fs'); const pid=fs.readFileSync('.bot.pid','utf8').trim(); process.kill(pid,'SIGTERM'); console.log('Bot detenido');\""
  },
  "docker-scripts": {
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f telegram-bot",
    "docker:restart": "docker-compose restart telegram-bot",
    "docker:status": "./monitor.sh status",
    "deploy": "./deploy.sh"
  },
  "keywords": [
    "telegram",
    "bot",
    "contpaqi",
    "openai",
    "erp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.7.8",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dockerode": "^4.0.9",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-telegram-bot-api": "^0.63.0",
    "openai": "^4.67.3",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "ssh2": "^1.17.0"
  }
}
